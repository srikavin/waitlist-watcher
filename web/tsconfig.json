{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "../*"
      ]
    },
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "outDir": "build/",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
